root = true

[*]
charset = utf-8
indent_size = 2
tab_width = 2
indent_style = space
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

[*.md]
trim_trailing_whitespace = false

[CMakeLists.txt]
indent_size = 8
tab_width = 8

[*.cmake]
indent_size = 8
tab_width = 8

[*.c]
[*.cxx]
[*.h]
[*.hxx]
indent_size = 4
tab_width = 4

[*.toml]
indent_size = 4
tab_width = 4

[.clangd]
[.clang-tidy]
[.clang-format]
indent_size = 2
tab_width = 2
