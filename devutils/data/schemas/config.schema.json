{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "logenium-devutils-schemas-config-r1",
	"title": "Configure Command Configuration",
	"description": "Configuration schema for project build settings",
	"type": "object",
	"required": ["revision", "enable_testing", "enable_xheader_testing", "enable_debug_testing", "build_mode"],
	"properties": {
		"revision": {
			"type": "integer",
			"description": "Configuration file revision number",
			"const": 1
		},
		"enable_testing": {
			"type": "boolean",
			"description": "Whether to enable testing globally"
		},
		"enable_xheader_testing": {
			"type": "boolean",
			"description": "Whether to enable xheader library tests"
		},
		"enable_debug_testing": {
			"type": "boolean",
			"description": "Whether to enable debug library tests"
		},
		"build_mode": {
			"type": "string",
			"description": "CMake build mode",
			"enum": ["Debug", "Release", "RelWithDebInfo", "MinSizeRel"]
		}
	},
	"additionalProperties": false
}
