{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "logenium-devutils-schemas-codegen-r1",
	"title": "Codegen Configuration",
	"description": "Configuration schema for generating cross-platform platform-specific files",
	"type": "object",
	"properties": {
		"revision": {
			"type": "integer",
			"description": "Configuration file revision number",
			"minimum": 1
		}
	},
	"patternProperties": {
		"^.*[/.].*$": {
			"description": "File path relative to project root",
			"type": "array",
			"minItems": 1,
			"items": {
				"type": "object",
				"required": ["if"],
				"properties": {
					"if": {
						"type": "string",
						"description": "Platform condition (e.g., sys.platform == 'linux')",
						"minLength": 1
					},
					"protocol_path": {
						"type": "string",
						"description": "Path to input specification file (e.g., protocol XML, IDL)"
					},
					"command": {
						"type": "array",
						"description": "Command to execute for code generation",
						"items": {
							"type": "string"
						},
						"minItems": 1
					},
					"contents": {
						"type": "string",
						"description": "File contents to write directly"
					}
				},
				"oneOf": [
					{
						"description": "Command-based generation",
						"required": ["command"],
						"properties": {
							"protocol_path": true,
							"command": true
						}
					},
					{
						"description": "Content-based generation",
						"anyOf": [{ "required": ["contents"] }, { "required": ["cotents"] }]
					}
				],
				"additionalProperties": false
			}
		}
	},
	"additionalProperties": false,
	"minProperties": 1
}
